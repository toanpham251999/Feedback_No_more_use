<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/txtTopicId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic Id:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txtTopicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic Name:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txtQuestionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Id: "
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txtQuestionContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Content: "
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="308dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#3AFA44"
        android:contentDescription="add_assignment"
        android:outlineAmbientShadowColor="#3770FF"
        android:outlineSpotShadowColor="#3770FF"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:rippleColor="#3770FF" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_delete_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="308dp"
        android:layout_marginTop="144dp"
        android:backgroundTint="#F90708"
        android:contentDescription="add_assignment"
        android:outlineAmbientShadowColor="#3770FF"
        android:outlineSpotShadowColor="#3770FF"
        android:src="@drawable/ic_baseline_delete_outline_24"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:rippleColor="#3770FF" />

</androidx.constraintlayout.widget.ConstraintLayout>